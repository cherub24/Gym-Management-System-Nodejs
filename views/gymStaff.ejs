<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym Staff</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 40px;
        }

        th, td {
            border: 1px solid #ecf0f1;
            padding: 16px;
            text-align: left;
        }

        th {
            background-color: #3498db;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        a {
            display: inline-block;
            margin: 5px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        a.edit {
            color: #fff;
            background-color: #3498db;
        }

        a.delete {
            color: #fff;
            background-color: #e74c3c;
        }

        a:hover {
            opacity: 0.8;
        }

        p {
            color: #34495e;
            font-size: 18px;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <h1>Gym Staff</h1>

    <% if (gymStaff.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% gymStaff.forEach(staff => { %>
                    <tr>
                        <td><%= staff.name %></td>
                        <td><%= staff.position %></td>
                        <td><%= staff.salary %></td>
                        <td>
                            <a href="/gym-staff/edit/<%= staff._id %>" class="edit">Edit</a>
                            <a href="/gym-staff/delete/<%= staff._id %>" class="delete">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No gym staff available.</p>
    <% } %>

    <a href="/gym-staff/new" class="edit">Add New Staff</a>
</body>

</html>

<!-- views/editMember.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include necessary head elements -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Member</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        form {
            width: 80%;
            max-width: 400px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 20px;
            transition: transform 0.3s ease;
        }

        form:hover {
            transform: scale(1.02);
        }

        label {
            color: #2c3e50;
            margin-bottom: 8px;
            display: block;
        }

        input,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        button {
            background-color: #3498db;
            color: #fff;
            padding: 12px 24px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #2980b9;
        }
    </style>
</head>

<body>
    <h1>Edit Member</h1>

    <form action="/members/edit/<%= member._id %>" method="POST">
        <label for="name">Member Name:</label>
        <input type="text" id="name" name="name" value="<%= member.name %>" required>

        <label for="type">Member Type:</label>
        <select id="type" name="type" required>
            <% memberTypes.forEach(memberType => { %>
                <option value="<%= memberType._id %>" <%= memberType._id.toString() === member.type._id.toString() ? 'selected' : '' %>><%= memberType.name %></option>
            <% }); %>
        </select>

        <label for="paymentPlan">Payment Plan:</label>
        <select name="paymentPlan" id="paymentPlan">
            <!-- Populate the options dynamically based on your payment plans -->
            <% paymentPlans.forEach(plan => { %>
                <option value="<%= plan._id %>" <%= plan._id.toString() === member.paymentPlan._id.toString() ? 'selected' : '' %>><%= plan.name %></option>
            <% }); %>
        </select>

        <!-- Additional fields -->
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" value="<%= member.phoneNumber %>">

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="<%= member.address %>">

        <label for="photo">Photo:</label>
        <input type="file" id="photo" name="photo">

        <button type="submit">Update</button>
    </form>

</body>

</html>
